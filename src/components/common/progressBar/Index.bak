<template>
  <div class="progress-bar" ref="progressBar">
    <el-slider
      v-model="playProcess"
      style="width: 100%;"
      class="bar-inner"
      @change="changeProcress"
      :show-tooltip="false"
    ></el-slider>
  </div>
</template>

<script>
export default {
  data() {
    return {
      playProcess: 0,
      percentOld: 0
    }
  },
  props: {
    percent: {
      type: Number,
      default: 0
    }
  },
  watch: {
    percent(newPercent) {
      this.setProgressOffset(newPercent)
    }
  },
  methods: {
    changeProcress() {
      this._triggerPercent()
    },
    _triggerPercent() {
      console.log(this.playProcess, this.percentOld)
      this.$emit('percentChange', this.percentOld)
    },
    // 设置进度条位置
    setProgressOffset(percent) {
      if (percent >= 0) {
        this.playProcess = percent * 100
        this.percentOld = percent
      }
    }
  },
  created() {
    this.touch = {}
  }
}
</script>

